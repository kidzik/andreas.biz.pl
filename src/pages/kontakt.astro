---
import Layout from '../layouts/Layout.astro';

const mapEmbedUrl = "https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2428.5!2d22.231791!3d52.409089!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x0!2zNTLCsDI0JzMyLjciTiAyMsKwMTMnNTQuNCJF!5e0!3m2!1spl!2spl!4v1699999999999!5m2!1spl!2spl";
const mapAddress = "ul. Skłodowskiej-Curie 7 lokal 50, 08-300 Sokołów Podlaski, Polska";
---

<Layout title="Kontakt - ANDREAS" description="Skontaktuj się z nami. Telefon: 692 301 340, Email: biuro@andreas.biz.pl">
  <section class="py-16">
    <div class="container mx-auto px-4">
      <h1 class="text-4xl font-bold text-gray-800 mb-4">Skontaktuj się z nami już teraz</h1>
      <p class="text-xl text-gray-600 mb-8">
        Z przyjemnością pomożemy Ci zrealizować Twój projekt.
      </p>

      <div class="grid md:grid-cols-2 gap-12">
        <!-- Contact Form -->
        <div>
          <form id="contact-form" class="space-y-6">
            <div>
              <label for="name" class="block text-sm font-medium text-gray-700 mb-1">
                Imię i nazwisko
              </label>
              <input
                type="text"
                name="name"
                id="name"
                placeholder="Wpisz swoje imię..."
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
              />
            </div>

            <div>
              <label for="email" class="block text-sm font-medium text-gray-700 mb-1">
                Adres email *
              </label>
              <input
                type="email"
                name="email"
                id="email"
                placeholder="Podaj swój e-mail..."
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
              />
            </div>

            <div>
              <label for="message" class="block text-sm font-medium text-gray-700 mb-1">
                Wiadomość
              </label>
              <textarea
                name="message"
                id="message"
                rows="5"
                placeholder="Wpisz wiadomość..."
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
              ></textarea>
            </div>

            <button
              type="submit"
              class="w-full bg-blue-600 text-white py-3 px-6 rounded-lg font-semibold hover:bg-blue-700 transition-colors"
            >
              Wyślij wiadomość
            </button>
          </form>
        </div>

        <!-- Contact Details -->
        <div class="space-y-8">
          <div>
            <h3 class="text-lg font-semibold text-gray-800 mb-2">Telefon</h3>
            <p class="text-3xl font-bold text-blue-600">692 301 340</p>
          </div>

          <div>
            <h3 class="text-lg font-semibold text-gray-800 mb-2">Adres</h3>
            <a
              href={`https://www.google.com/maps/place/${encodeURIComponent(mapAddress)}`}
              target="_blank"
              rel="noopener"
              class="text-gray-600 hover:text-blue-600"
            >
              ul. Skłodowskiej-Curie 7 lokal 50<br />
              08-300 Sokołów Podlaski<br />
              Polska
            </a>
          </div>

          <div>
            <h3 class="text-lg font-semibold text-gray-800 mb-2">E-mail</h3>
            <a href="mailto:biuro@andreas.biz.pl" class="text-blue-600 text-lg">
              biuro@andreas.biz.pl
            </a>
          </div>

          <!-- Map (embedded iframe - no API key needed) -->
          <div class="mt-8">
            <iframe
              src={mapEmbedUrl}
              class="w-full h-64 rounded-lg border-0"
              allowfullscreen=""
              loading="lazy"
              referrerpolicy="no-referrer-when-downgrade"
              title="Mapa lokalizacji ANDREAS"
            ></iframe>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>

<script>
  // Simple mailto: form handler
  document.getElementById('contact-form')?.addEventListener('submit', function(e) {
    e.preventDefault();
    
    const form = e.target as HTMLFormElement;
    const name = (form.querySelector('#name') as HTMLInputElement)?.value || '';
    const email = (form.querySelector('#email') as HTMLInputElement)?.value || '';
    const message = (form.querySelector('#message') as HTMLTextAreaElement)?.value || '';
    
    const subject = encodeURIComponent(`Wiadomość ze strony od ${name}`);
    const body = encodeURIComponent(`Imię: ${name}\nEmail: ${email}\n\nWiadomość:\n${message}`);
    
    window.location.href = `mailto:biuro@andreas.biz.pl?subject=${subject}&body=${body}`;
  });
</script>
